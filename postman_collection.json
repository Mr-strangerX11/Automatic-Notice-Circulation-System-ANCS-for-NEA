{
  "info": {
    "name": "ANCS API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {"method": "POST", "header": [{"key": "Content-Type", "value": "application/json"}], "url": "{{baseUrl}}/api/auth/login", "body": {"mode": "raw", "raw": "{\n  \"email\": \"admin@nea.local\",\n  \"password\": \"password\"\n}"}}
    },
    {
      "name": "List Notices",
      "request": {"method": "GET", "url": "{{baseUrl}}/api/notices"}
    },
    {
      "name": "Create Notice",
      "request": {"method": "POST", "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{token}}"}], "url": "{{baseUrl}}/api/notices", "body": {"mode": "raw", "raw": "{\n  \"title\": \"Test\",\n  \"content\": \"Body\",\n  \"priority\": \"normal\",\n  \"department_ids\": [1]\n}"}}
    },
    {
      "name": "Approve Notice",
      "request": {"method": "POST", "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{token}}"}], "url": "{{baseUrl}}/api/notices/1/approve", "body": {"mode": "raw", "raw": "{\n  \"department_ids\": [1]\n}"}}
    }
  ]
}
